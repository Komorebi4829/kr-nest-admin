{
    "extends": "@repo/ts-config/react.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "@/*": ["src/*"],
            "#/*": ["typings/*"],
        },
        "types": ["unplugin-icons/types/react", "@types/node"]
    },
    "include": ["./src", "./typings/**/*.d.ts", "./typings/**/*.ts", "**.ts", "*.json", "**.*js"],
    "exclude": ["node_modules", "dist"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
