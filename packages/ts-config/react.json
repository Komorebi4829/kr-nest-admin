{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Vite",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ES2020",
        "declaration": false,
        "declarationMap": false,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "esnext",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "bundler",
        "useUnknownInCatchVariables": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
